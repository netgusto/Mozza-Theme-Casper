<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />

    {% if post is defined %}{{ component_metatags(post) }}
    {% else %}{{ component_metatags() }}
    {% endif %}

    <meta name="HandheldFriendly" content="True" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet" type="text/css" href="{{ app.request.basepath }}/vendor/netgusto/pulpy-theme-casper/assets/css/screen.css" />
    <link rel="stylesheet" type="text/css" href="{{ app.request.basepath }}/vendor/netgusto/pulpy-theme-casper/assets/css/pulpy.css" />
    <link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family=Noto+Serif:400,700,400italic|Open+Sans:700,400" />

    <!-- Highlightjs Styles for this theme -->
    <link rel="stylesheet" href="{{ app.request.basepath }}/vendor/zipball/highlightjs/styles/railscasts.css">
</head>
<body class="{% block bodyclass %}home-template{% endblock %}">

    {% block body %}
    {% endblock body %}

    <footer class="site-footer">
        <a class="subscribe icon-feed" href="{{ path('rss') }}"><span class="tooltip">Subscribe!</span></a>
        <div class="inner">
             {% block footer %}
                {% include '@Custom/footer.html.twig' %}
            {% endblock footer %}
            <section class="copyright">All content copyright <a href="{{ path('home') }}">{{ site.title }}</a> &copy; {{ 'now'|date('Y') }} &bull; All rights reserved.</section>
            <section class="poweredby">Proudly published with <a href="http://netgusto.com/pulpy">Pulpy</a></section>
        </div>
    </footer>

    <script src="{{ app.request.basepath }}/vendor/jquery/jquery/jquery-2.1.0.min.js"></script>
    <script type="text/javascript" src="{{ app.request.basepath }}/vendor/netgusto/pulpy-theme-casper/assets/js/jquery.fitvids.js"></script>
    <script type="text/javascript" src="{{ app.request.basepath }}/vendor/netgusto/pulpy-theme-casper/assets/js/index.js"></script>

    <!-- Highlight JS -->
    <script src="{{ app.request.basepath }}/vendor/zipball/highlightjs/highlight.pack.js" type="text/javascript"></script>
    <script>
        hljs.configure({ tabReplace: '    '});  // 4 spaces
        hljs.initHighlighting();
    </script>

    {{ component_googleanalytics() }}
</body>
</html>
